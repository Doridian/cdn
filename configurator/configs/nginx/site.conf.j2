server {
    listen 443 http2 ssl;
    listen [::]:443 http2 ssl;

    site_name {{ site.domains.join(' ') }};
    root /var/www/sites/{{ site.name }};

    ssl on;
    ssl_certificate /opt/cdn/certifier/certs/{{ site.name }}.pem;
    ssl_certificate_key /opt/cdn/certifier/keys/{{ site.name }}.pem;
    ssl_protocols TLSv1.2;

    include /opt/cdn/configurator/configs/nginx/wellknown.conf;

{% if site.vcl %}
    include /opt/cdn/configurator/configs/nginx/proxy.conf;
{% endif %}
}
