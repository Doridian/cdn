{%- set useRouteRule = dynConfigFindClosest('useRouteRules') %}
{%- for tag in tags if tag in dynConfig %}
    {%- set cfg = dynConfig[tag] %}
    {%- if 'ips4' in cfg %}
        {%- for addr in cfg.ips4 %}
ip -4 addr add {{ addr }} dev lo
            {%- if useRouteRule %}
ip -4 rule add from {{ addr }} table 666
            {% endif %}
        {%- endfor %}
    {%- endif %}
    {%- if 'ips6' in cfg %}
        {%- for addr in cfg.ips6 %}
ip -6 addr add {{ addr }} dev lo
            {%- if useRouteRule %}
ip -6 rule add from {{ addr }} table 666
            {% endif %}
        {%- endfor %}
    {%- endif %}
{%- endfor %}
